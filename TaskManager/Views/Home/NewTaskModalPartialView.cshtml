<div class="modal fade" id="modal-container-new-task" role="dialog" aria-labelledby="newTaskModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTaskModal">
                    New Task <span id="new-task-id-label"></span>
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form role="form" action="#">
                            <div class="form-group">
                                <input type="hidden" id="new-task-id" />
                                <input type="hidden" id="new-task-concluded" />
                                <label for="exampleInputEmail1">
                                   Description
                                </label>
                                <input type="text" class="form-control" id="newTaskDescription" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" onclick="confirmNewTask()" class="btn btn-primary">
                    Save
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>

    </div>

</div>