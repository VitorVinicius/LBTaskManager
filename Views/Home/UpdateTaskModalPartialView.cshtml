<div class="modal fade" id="modal-container-update-task" role="dialog" aria-labelledby="updateTaskModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateTaskModal">
                    Update Task <span id="update-task-id-label"></span>
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    
                    <div class="col-md-12">
                        <h4>Current Description</h4>
                    </div>
                    <div class="col-md-12">
                        <p>
                            <span id="update-task-description-label"></span>
                        </p>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form role="form" action="#">
                            <div class="form-group">
                                <input type="hidden" id="update-task-id" />
                                <input type="hidden" id="update-task-concluded" />
                                <label for="exampleInputEmail1">
                                    <strong>New Description</strong>
                                </label>
                                <input type="text" class="form-control" title="New Task Description" placeholder="New Description"  keypress="ignoreEnterKey(event)" id="newDescription" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" title="Confirm Description Task Description changes" onclick="confirmUpdateTask()" class="btn btn-primary">
                    Save
                </button>
                <button title="Close Window" type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>

    </div>

</div>