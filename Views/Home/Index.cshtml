@{
    ViewData["Title"] = "My Tasks";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron jumbotron-top-mini">
                <h2>
                    Welcome @((ViewData["UserData"] as TaskManager.Models.User).Firstname)!
                </h2>
                <p><strong>My Tasks</strong></p>
                <p>
                    <a title="Create new task" class="btn btn-primary btn-large" href="#" onclick="showNewTaskModal(event)">New Task</a>
                </p>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-warning text-center">
                        Pending Tasks
                    </h3>
                    <div class="list-group" id="list-tab-pending" role="tablist">
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-success text-center">
                        Concluded Tasks
                    </h3>
                    <div class="list-group" id="list-tab-concluded" role="tablist">
                       
                    </div>
                </div>
            </div>
        </div>
        <partial name="NewTaskModalPartialView" />
        <partial name="UpdateTaskModalPartialView" />
        <partial name="DeleteTaskModalPartialView" />
    </div>
</div>
<script>
    window.onload = function () {
        this.loadTasks();
    }
</script>